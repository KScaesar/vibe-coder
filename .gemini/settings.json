{
  "ide": {
    "enabled": true
  },
  "mcpServers": {
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    },
    "markitdown": {
      "command": "uvx",
      "args": [
        "markitdown-mcp"
      ]
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "YOUR_API_KEY"
      ]
    },
    "serena": {
      "timeout": 5000,
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server"
      ],
      "excludeTools": []
    }
  },
  "general": {
    "checkpointing": {
      "enabled": true
    },
    "preferredEditor": "vscode"
  },
  "tools": {
    "allowed": [
      "run_shell_command(git *)",
      "run_shell_command(cat *)",
      "run_shell_command(ls *)",
      "run_shell_command(grep *)",
      "run_shell_command(echo *)"
    ],
    "exclude": [
      "run_shell_command(git commit *)",
      "run_shell_command(rm)"
    ]
  },
  "mcp": {
    "excluded": [
      "markitdown",
      "playwright"
    ]
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "ui": {
    "theme": "GitHub"
  }
}